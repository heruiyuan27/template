<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.template.dao.mapper.EmployeeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.template.model.entity.EmployeeEntity">
        <id column="id" property="id"/>
        <result column="employee_id" property="employeeId"/>
        <result column="employee_nickname" property="employeeNickname"/>
        <result column="employee_head" property="employeeHead"/>
        <result column="employee_password" property="employeePassword"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="dept_id" property="deptId"/>
        <result column="level" property="level"/>
        <result column="title" property="title"/>
    </resultMap>

    <resultMap id="VOResultMap" type="com.template.model.vo.EmployeeVO">
        <result column="employee_id" property="employeeId"/>
        <result column="employee_nickname" property="employeeNickname"/>
        <result column="employee_head" property="employeeHead"/>
        <result column="create_time" property="createTime"/>
        <result column="title" property="title"/>
        <result column="dept_name" property="deptName"/>
    </resultMap>

    <insert id="insertEmployee" parameterType="com.template.model.entity.EmployeeEntity">
        INSERT INTO employee(employee_id, employee_nickname, employee_head, employee_password, create_time, update_time,
                         dept_id, level, title)
        VALUES (#{employeeId}, #{employeeNickname}, #{employeeHead}, #{employeePassword}, now(), now(), #{deptId},
                #{level}, #{title})
    </insert>

    <select id="pageQueryEmployee" parameterType="map" resultMap="VOResultMap">
        SELECT e.employee_id,
               e.employee_nickname,
               e.employee_head,
               e.create_time,
               e.title,
               d.dept_name
        FROM employee e
                 LEFT JOIN dept d
                           ON e.dept_id = d.dept_id
            LIMIT #{startIndex}
           , #{pageSize};
    </select>
</mapper>
